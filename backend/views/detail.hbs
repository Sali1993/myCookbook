<div>
 <a href="/recipes" class="btn btn-secondary">Back to Browse</a>   
<h1>{{this.title}}</h1>
<h2>{{this.cooktime}} mins</h2>
<a href="/recipes/{{this.id}}/edit" class="btn btn-secondary"> Edit</a>
<form action="/recipes/{{this.id}}?_method=DELETE" method="POST">
<input type="submit"  value="Delete"  class="btn btn-danger">
</form>
{{#if vegan}}
<p>Vegan!</p>
{{else}}
<p>Non-Vegan</p>
{{/if}}
{{#if vegetarian}}
<p>Vegetarian</p>
{{else}}
<p>non-vegetarian</p>
{{/if}}
<h3>Ingredients</h3>
<p>{{this.ingredients}}</p>
<h3>Instructions</h3>
<p>{{this.instructions}}</p>

</div>
